<widget xmlns="http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id="http://gadgets.jasha.eu/widgetgap"
        version="2012-10-10"
        height="480"
        width="320">
    <name>WidgetGap</name>
    <description>A demo to show that this widget can be used in Apache Wookie and Apache Cordova</description>
    <icon src="icon.png"/>
    <icon src="icons/ios/icon.png" width="57" height="57" />
    <icon src="icons/ios/icon-72.png" gap:platform="ios" width="72" height="72" />
    <icon src="icons/ios/icon-72-2x.png" width="114" height="114" />

    <content src="index.html"/>
    <author>Jasha Joachimsthal</author>
    <license>Licensed under the Apache 2.0 License (see http://www.apache.org/licenses/LICENSE-2.0).</license>
    <!-- If you do not want any permissions to be added to your app, add the
     following tag to your config.xml; you will still have the INTERNET
     permission on your app, which PhoneGap requires. -->
    <preference name="permissions" value="none"/>
    <access origin="http://www.demo.onehippo.com"/>
    <access origin="http://onehippo.com" subdomains="true"/>
</widget>